        },
        {
          "displayName": "Label Font Size",
          "controlType": "number",
          "name": "ylabelFontSize",
          "defaultValue": "11",
          "min": "0",
          "max": "50"
        }
      ]
    }
  ],
  "filterSettings": {
    "masterFilter": {
      "visible": "true",
