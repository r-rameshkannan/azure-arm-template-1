{
  "widgetName": "BubbleChart",
  "guid": "f0762206-b328-4738-b662-2d65bb8e7d9e",
  "displayName": "BubbleChart",
  "category": "Distribution",
  "description": "The bubble displays two dimensions of data. Each points is drawn as a bubble, where bubble's size depends on size property",
  "srcFile": "src/sourcefile.js",
  "version": "4.2.0.0",
  "dependencies": {
    "scripts": [
      "src/ej2CustomBarChart.min.js"
    ],
    "styles": [
		"style/widget.css"
    ]
  },
  "dataFields": [
    {
      "displayName": "Y Value(s)",
      "valueType": "measure",
      "name": "Value",
      "min": "1",
      "max": "5",
      "optional": "false"
    },
    {
      "displayName": "X Value",
      "valueType": "dimension",
      "name": "Column",
      "min": "1",
      "max": "1",
      "optional": "false"
    },
	{
      "displayName": "Bubble Size",
      "valueType": "measure",
      "name": "bSize",
      "min": "1",
      "max": "1",
      "optional": "true"
    },
	{
      "displayName": "Row",
      "valueType": "dimension",
      "name": "row",
      "min": "1",
      "max": "1",
      "optional": "false"
    },
    {
      "displayName": "Filters",
      "valueType": "none",
      "name": "FilterColumn",
      "min": "1",
      "max": "10",
      "optional": "true"
    }
  ],
  "functionalities": [
	{
      "header": "GridLine Settings",
      "properties": [
        {
          "displayName": "Category Axis",
          "controlType": "bool",
          "name": "showGridLineForXaxis",
          "defaultValue": "false"
        },
        {
          "displayName": "Primary Value Axis",
          "controlType": "bool",
          "name": "showGridLineForYaxis",
          "defaultValue": "true"
        }
      ]
    },
    {
      "header": "Basic Settings",
      "properties": [
	
        {
          "displayName": "Enable Animation",
          "controlType": "bool",
          "name": "enableAnimation",
          "defaultValue": "false"
        },
        {
          "displayName": "Show Legend",
          "controlType": "bool",
          "name": "showLegend",
          "defaultValue": "false"
        },
        {
          "displayName": "Legend Position",
          "controlType": "enumeration",
          "name": "legendPosition",
          "defaultValue": "Bottom",
          "listItems": [
            "Top",
            "Bottom",
            "Left",
            "Right"
          ]
        },
		 {
          "displayName": "Legend Shape",
          "controlType": "enumeration",
          "name": "legendShape",
          "defaultValue": "Rectangle",
          "listItems": [
            "Circle",
            "Rectangle",
            "Triangle",
            "Diamond",
            "Cross",
            "ActualRect",
             "TargetRect",
            "HorizontalLine",
            "VerticalLine",
            "Pentagon",
            "InvertedTriangle",
            "SeriesType"
          ]
        },
        {
          "displayName": "Show Datalabels",
          "controlType": "bool",
          "name": "showDatalabels",
          "defaultValue": "false"
        },
        {
          "displayName": "DataLabel FontSize",
          "controlType": "number",
          "name": "datalabelFontSize",
          "defaultValue": "11",
          "min": "0",
          "max": "50"
        },
        {
          "displayName": "DataLabel Color",
          "controlType": "color",
          "name": "datalabelcolor",
          "defaultValue": "#000000"
        }
      ]
    },
    {
      "header": "Category Axis Settings",
      "properties": [
        {
          "displayName": "Show Category Axis",
          "controlType": "bool",
          "name": "showCategoryAxis",
          "defaultValue": "true"
